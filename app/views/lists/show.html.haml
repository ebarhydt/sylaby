- provide(:title, @list.title)

.overlay.hide

.list-show
  .modal-man.hide
    
    / This is my time
    / %button.ex click out
  .row
    .col-xs-12.list-title
      %h3= @list.title
      - if current_user.try(:admin?)
        = button_to "Edit", edit_list_path(@list), method: "get"
    
  .row
    - if @list.sources 
      .col-xs-12.source
        %ul
          %li
            %i.fa.fa-info-circle
            This entry is based on
            =raw @list.sources

  .row
    .col-xs-12
      .overview
        .overview-heading
          %h4.overview-title
            %i.fa.fa-comments-o
            Overview
        .overview-body
          = raw @list.description

  .row
    .col-xs-12
      .papers
        .papers-heading
          %h4.papers-title
            %i.fa.fa-newspaper-o
            Recommended Papers
            %button.btn.btn-info.btn-lg.recommend(data-target="#myModal" data-toggle="modal" type="button") Open Modal

            #myModal.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
              .modal-header
                YOOOO MY MAN WHATUP
        .papers-body
          .table-responsive
            %table.table.table-bordered.table-hover
              %tr
                %td
                  %b Date
                %td
                  %b Title
                %td 
                  %b Authors
                %td
                  %b Journal
              - @list.items.each do |item|
                %tr.clickable-row{ "data-href" =>('/items/' + item.id.to_s) }
                  %td= item.year
                  %td= link_to item.title, item, "data-remote" => "true"
                  %td= item.author
                  %td= item.journal

  

  .row
    - @list.users.each do |curator|
      = link_to curator.link do
        .col-xs-3
          .div.panel
            .div.panel-main
              .row
                .col-xs-3
                  = image_tag("#{curator.first_name}_#{curator.last_name}.jpg")
                .col-xs-9
                  %ul
                    %li 
                      %h4= "#{curator.first_name} #{curator.last_name}"
                    %li
                      - if curator.school == "Harvard University"
                        = "Harvardian"
                      - elsif curator.school == "Yale University" 
                        = "Yalie"
                      - elsif curator.school == "MIT"
                        = "MIT'er"
                      - else
                        = curator.school
                    %li= curator.position 
            .div.panel-sub
              .row
                .col-xs-12
                  - if curator.lists.count > 1
                    = "Helped write this and #{pluralize (curator.lists.count - 1), 'other entry'}"
                  - else
                    = "Helped write this entry"
    


:javascript
    $(document).ready( function() {
      $('.user-link').click( function() {
        mixpanel.track("Clicked a curator");
      });
      $('.overlay').click( function() {
        $('.overlay').addClass('hide');
        $('.modal-man').addClass('hide');
      });
      $('.recommend').click(function() {
        $('.overlay').removeClass('hide');
        $('.modal-man').removeClass('hide');
      })
    });

