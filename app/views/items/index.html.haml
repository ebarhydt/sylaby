= form_for @email_signup, remote: true do |f|
  = render 'shared/error_messages', object: f.object
  %div.field
    = f.text_field :email, placeholder: "Your email..."
  = f.submit "Signup", class: "btn btn-large btn-primary"


%ul.items
  - @items.group_by(&:date).each do |date, items|
    .date
      %h2
        =date
      = render partial: 'item', collection: items


