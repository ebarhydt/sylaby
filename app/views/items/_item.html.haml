.item{id: "item-#{item.id}"}
  =link_to item.url do 
    .row
      .col-xs-10
        %ul.list-inline
          %li  
            %ul
              %li.title= item.title
              %li.description= item.description
              %li.lists
                %ul 
                  - if item.lists.count > 1
                    Also in:
                    - item.lists.each do |list|
                      - if !(list == @list)
                        %li= link_to "#{list.title}", list_path(list)
      .col-xs-2
        %ul.list-inline.pull-right
          %li
            - if user_signed_in?
              = render partial: 'items/add_user_item_form', object: item, as: 'item'
